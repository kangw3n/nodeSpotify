extends layout

block content
	.container
		if artist
			#track
				header.album-header
					.row
						.col-md-4
							if artist.images.length > 0
								div
									img.album-thumb(src=artist.images[0].url, alt='')
						.col-md-8
							h2 #{artist.name}
							h4 Follower: #{artist.followers.total}
							h5 Popularity: #{artist.popularity}
							a.btn.btn-primary(href=artist.external_urls.spotify, target='_blank') View Artist In Spotify
				.album-tracks
					h2 Album Tracks
					each track in tracks
						div
							.well
								.row
									.col-md-2
										img.album-thumb(src=track.album.images[0].url, alt='')
										span #{track.album.name}
										br
										a(href="/album/" + track.album.id) View Album
									.col-md-10
										h4 #{track.name}
										a.btn.btn-primary(href=track.preview_url, target='_blank') Preview Track
										div
											| #{track.duration_ms | msMinute} - 	Popularity: #{track.popularity}

